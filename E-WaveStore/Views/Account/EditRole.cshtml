@using Microsoft.AspNetCore.Identity
@model DataLayer.Entities.User

<h2>Changing roles for a user @Model.UserName</h2>

<form asp-action="EditRole" method="post">
    <input type="hidden" name="userId" value="@Model.Id" />
    <div class="form-group">
        @foreach (IdentityRole role in ViewBag.allRoles as ICollection<IdentityRole>)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(ViewBag.userRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
