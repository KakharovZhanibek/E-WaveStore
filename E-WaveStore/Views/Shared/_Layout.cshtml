<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_WaveStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header class="p-3 bg-dark text-white">
        <div style="display:flex; justify-content:space-between; align-content:center;">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
               @* <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap" /></svg>
                </a>
                   
*@
                <a href="#">
                    <img src="/Images/Logo_2.png" alt="logo" style="width:100px;">
                </a>
                <a style="color: #ffc107;" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">E_WaveStore</a>
               @* <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>*@

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">

                    <li> <a class="nav-link px-2 text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a> </li>
                    <li> <a class="nav-link px-2 text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> </li>
                    <li> <a class="nav-link px-2 text-white" asp-area="" asp-controller="Keyboard" asp-action="KeyboardList">Keyboard List</a> </li>

                    @if (User.IsInRole("admin"))
                    {
                        <li> <a class="nav-link px-2 text-white" asp-area="" asp-controller="Account" asp-action="UserList">User List</a> </li>
                    }
                </ul>

                <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                    <input type="search" class="form-control form-control-dark" placeholder="Search..." aria-label="Search">
                </form>

                <div @*class="text-end"*@ style="display:flex; justify-content:flex-end">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link px-2 text-white" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            <a class="nav-link px-2 text-white" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                    }
                    else
                    {
                        <a class="nav-link px-2 text-white">Hello, @User.Identity.Name</a>

                        <form method="post" asp-controller="Account" asp-action="Logout">                          
                            <button type="submit" class="btn btn-warning" style="padding:0; border: none; background: none; text-decoration:none">
                                <a class="nav-link px-2 text-white">Log out</a>
                            </button>                           
                        </form>

                    }
                    @*  <button type="button" asp-controller="Account" asp-action="Login" class="btn btn-outline-light me-2">Login</button>
                        <button type="button" asp-controller="Account" asp-action="Register" class="btn btn-outline-light me-2">Register</button>
                        <button type="button" class="btn btn-warning">Sign-up</button>*@
                </div>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - E_WaveStore - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
